//pseudo code
findEvenOdd(int number) -> bool
    if n%2 == 0
        return true
    end if
    return false

main()
    input number
    result = findEvenOdd(number);
    if result == true
        print number is even
    end if
    print number is odd



//code


#include <iostream>
using namespace std;

bool findEvenOdd(int number){
  if (number % 2 == 0){
      return true;
  }
  else{
      return false;
  }
}  

int main() {
  int number;
  cout << "Enter an integer: ";
  cin >> number;
  
  bool result = findEvenOdd(number);
  if (result){
       cout << number << " is even.";
  }
  else
  {
    cout << number << " is odd.";  
  }

  return 0;
}







